{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "neuro",
  "version": "0.1.0",
  "identifier": "com.neuro.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "visible": true,
        "transparent": true,
        "decorations": false,
        "shadow": false,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}
